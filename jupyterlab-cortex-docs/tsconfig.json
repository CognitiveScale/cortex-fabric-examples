{
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2015",
    "types": ["lodash"]
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true
}
